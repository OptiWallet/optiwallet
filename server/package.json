{
  "name": "optiwallet",
  "version": "0.0.1",
  "scripts": {
    "test": "bun test",
    "dev": "bun i && bun run tsc && bun lint && bun test && bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "lint": "bun run eslint --fix . --ext .ts,.js",
    "build": "bun run drizzle-kit generate && bun lint && bun test && bun build src/index.ts --target bun --outdir dist --production && tsc",
    "push-db": "bunx drizzle-kit push"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/swagger": "^1.3.1",
    "drizzle-orm": "^0.44.7",
    "elysia": "^1.4.25",
    "elysia-helmet": "^3.0.0",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/bun": "^1.3.9",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "module": "src/index.js"
}
